<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UsageActivity"
    android:padding="20dp">

    <!-- Water Usage EditText -->
    <EditText
        android:id="@+id/etWaterUsage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Water Usage (Liters)"
        android:inputType="numberDecimal"
        android:background="@android:drawable/edit_text"
        android:padding="14dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- Electricity Usage EditText -->
    <EditText
        android:id="@+id/etElectricityUsage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter Electricity Usage (kWh)"
        android:inputType="numberDecimal"
        android:background="@android:drawable/edit_text"
        android:padding="14dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etWaterUsage"
        android:layout_marginTop="16dp"/>

    <!-- Submit Button (Ensured correct ID) -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Usage"
        android:textSize="18sp"
        android:padding="12dp"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etElectricityUsage"
        android:layout_marginTop="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
